<div class="container-fluid mt-4 mb-5" id="pollResults">
  <div class="row">
    <div class="col-12 offset-0 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
      <h1 class="display-1"><strong>Results</strong></h1>
      {{!-- Displays the poll question --}}
      <h1 class="text-capitalize">{{pollResults.0.pollQuestion}}</h1>
      <hr>
      <!-- For each poll option-->
      {{#each pollResults}}
        <div>
          {{!-- Displays the poll option --}}
          <h3 class="text-capitalize">{{this.optionValue}}</h3>
            <div class="bar bg-light">
              <div class="barPercent">
                {{!-- Displays percentage --}}
                <p class="text-right pt-2 pr-3 percentage pl-2"></p>
              </div>
            </div>
            <div class="text-right">
              <small class="text-muted">Count:</small>
              {{!-- Add the vote count for the poll --}}
              <small class="text-muted voteCount">{{this.voteCount}}</small>
            </div>
        </div>
      {{/each}}
      <div class="text-right mt-3">
        <h3 id="voteTotal"><strong>asdfafsd</strong></h3>
      </div>
      <div class="text-center">
        {{!-- Add a button that allows the user to vote for the particular poll --}}
        <a class="btn btn-success w-25" href="../vote/{{pollResults.0.questionID}}">Vote <i class="fas fa-check"></i></a></a>
      </div>    
    </div>
  </div>
</div>