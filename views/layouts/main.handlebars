<!-- Peter Harlan WKU Polling Project -->
<!doctype html>
<html lang="en">
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <!-- Bootstrap and Font Awesome CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
  <!-- Add Custom CSS -->
  <link rel="stylesheet" href="/css/custom.css">

  {{!-- Adds the tab title --}}
  <title>{{title}}</title>
</head>
<body>

  {{!-- If fixedTop is true, the navbar will be fixed to the top of the screen --}}
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark {{fixedTop}}" id="navBarMain"> 
    {{!-- Navbar brand --}}
    <a class="navbar-brand" href="/"><strong>Ur Voice</strong></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
      <ul class="navbar-nav">
        {{!-- If the user is logged in, display the following --}}
        {{#if loggedIn}}
          <li class="nav-item">
            <a class="nav-link active" href="/createPolls">Create Poll</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/allPolls">All Polls</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/yourPolls">Ur Polls</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/logOut">Sign Out</a>
          </li>
        {{!-- If the user is not logged in, display the following --}}
        {{else}}
          <li class="nav-item">
            <a class="nav-link active" href="/signUp">Sign Up</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle active" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Sign in
            </a>
            <!-- Dropdown menu -->
            <div class="dropdown-menu dropdown-menu-right px-2" aria-labelledby="navbarDropdown">
              <form class="needs-validation" novalidate action="/login" method="post">
                <!-- Email input -->
                <div class="form-group my-0">
                  <input  class="form-control mb-2" type="text" id="email" placeholder="email" name="email" required>
                  <div class="invalid-feedback">
                    Input email
                  </div>
                </div>
                <!-- Password input -->
                <div class="form-group my-0">
                  <input  class="form-control" type="password" id="password" name="password" placeholder="password" required>
                  <div class="invalid-feedback">
                    Input password
                  </div>
                </div>
                <!-- Dropdown divider -->
                <div class="dropdown-divider"></div>
                <!-- LogIn, SignUp, LogOut button -->
                <button class="dropdown-item" type="submit">Log In</button>
              </form>
            </div>
          </li>
        {{/if}}
      </ul>
    </div>
  </nav>

  {{!-- Add different body page to reflect each unique content --}}
  {{{body}}}

  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  <!-- Custom js script -->
  <script src="/js/custom.js"></script>
</body>
</html>